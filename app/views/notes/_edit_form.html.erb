
<%= form_with(model: note, html: { data: {action: 'turbo:submit-end->modal#close'}}) do |form| %>
    <%= form.label :title, style: "display: block" %>
    <%= form.text_area :title %>
    <%= form.label :description, style: "display: block" %>
    <%= form.text_area :description %>
    <%= form.submit "Update" %>
<% end %>